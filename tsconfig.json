{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "mapRoot": "./",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "core-js"
    ]
  }
}